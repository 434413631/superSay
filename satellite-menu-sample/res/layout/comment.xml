<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <RelativeLayout
            android:layout_marginTop="20px"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="网友推荐指数"
                android:id="@+id/textView" android:layout_gravity="center" android:layout_marginLeft="20dp"/>
        <ImageView
                android:layout_centerInParent="true"
                android:src="@drawable/star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"/>
    </RelativeLayout>
    <RelativeLayout
            android:layout_marginTop="20px"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="你的推荐指数"
                android:id="@+id/textView" android:layout_gravity="center" android:layout_marginLeft="20dp"/>
        <ImageView
                android:layout_centerInParent="true"
                android:src="@drawable/star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"/>
    </RelativeLayout>
    <RelativeLayout
            android:layout_marginTop="20px"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="简评"
                android:id="@+id/little"
                android:layout_alignParentLeft="true" android:layout_marginLeft="42dp"
                android:layout_centerVertical="true"/>
        <EditText
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/littleEdit"
                android:layout_centerInParent="true"></EditText>

    </RelativeLayout>
    <RelativeLayout
            android:layout_marginTop="20px"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="图片"
                android:id="@+id/textView" android:layout_gravity="center" android:layout_alignParentLeft="true"
                android:layout_marginLeft="24dp" android:layout_centerVertical="true"/>
        <ImageView
                android:src="@drawable/test"
                android:layout_width="wrap_content"
                android:layout_height="97dp"
                android:id="@+id/imagefor"
                />
    </RelativeLayout>
    <RelativeLayout
            android:layout_marginTop="20px"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="顶此团购"
                    android:id="@+id/buttonding" android:layout_gravity="center"/>
            <Button
                    android:layout_toRightOf="@id/buttonding"
                    android:src="@drawable/test"
                    android:text="踩此团购"
                    android:id="@+id/buttoncai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >
        <Button
                android:text="提交"
                android:id="@+id/summit"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

    </RelativeLayout>
</LinearLayout>