<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <RelativeLayout
            android:layout_marginTop="20px"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="网友推荐指数"
                android:id="@+id/textView" android:layout_gravity="center" android:layout_marginLeft="20dp"/>
        <ImageView
                android:layout_centerInParent="true"
                android:src="@drawable/star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"/>
    </RelativeLayout>
    <RelativeLayout
            android:layout_marginTop="20px"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="你的推荐指数"
                android:id="@+id/textView" android:layout_gravity="center" android:layout_marginLeft="20dp"/>
        <ImageView
                android:layout_centerInParent="true"
                android:src="@drawable/star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"/>
    </RelativeLayout>
    <RelativeLayout
            android:layout_marginTop="20px"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="简评"
                android:id="@+id/little"
                android:layout_alignParentLeft="true" android:layout_marginLeft="42dp"
                android:layout_centerVertical="true"/>
        <EditText
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:id="@+id/littleEdit2"
                android:layout_centerInParent="true"/>

    </RelativeLayout>
    <RelativeLayout
            android:layout_marginTop="20px"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relative">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imagefor"
                />
        <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:layout_below="@id/relative"
                android:orientation="horizontal"
                android:id="@+id/linerlayout"
                >
            <Button
                    android:layout_below="@id/imagefor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="选取图片"
                    android:id="@+id/selectImg"
                    android:layout_marginLeft="24dp"/>
            <Button
                    android:id="@+id/uploadImag"
                    android:layout_below="@id/imagefor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上传所选图片"
                    android:layout_marginLeft="24dp"/>
        </LinearLayout>
        <ProgressBar
                android:layout_below="@id/linerlayout"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:id="@+id/progressBar1"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"/>
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/uploadImageResult"
                ></TextView>

    </RelativeLayout>
    <RelativeLayout
            android:layout_marginTop="20px"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="顶此团购"
                    android:id="@+id/buttonding" android:layout_gravity="center"/>
            <Button
                    android:layout_toRightOf="@id/buttonding"
                    android:src="@drawable/test"
                    android:text="踩此团购"
                    android:id="@+id/buttoncai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >
        <Button
                android:text="提交"
                android:id="@+id/summit"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

    </RelativeLayout>
</LinearLayout>